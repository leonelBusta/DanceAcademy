@model Dance_MVCRepository.Models.Genero
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">
    editar Genero
</h3>

<form method="post" asp-area="Main" asp-controller="Genero" asp-action="Insert">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-2 mt-4">
            <div class="col-4">
                <label asp-for="Tipo"></label>
            </div>
            <div class="col-8">
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-10 offset-2 mt-4">
            <div class="col-4">
                <label asp-for="Descripcion"></label>
            </div>
            <div class="col-8">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col">

                        <button type="submit" class="btn btn-primary form-control">Guardar cambios</button>
                        &nbsp;
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>
