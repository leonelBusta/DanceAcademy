@model Dance_MVCRepository.Models.Instructores
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">
    editar Instructor
</h3>

<form method="post" asp-area="Main" asp-controller="Instructor" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-2 mt-4">
            <div class="col-8   ">
                <label asp-for="Nombre"></label>

                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="col-8">
                <label asp-for="ApPaterno"></label>

                <div class="col-8">
                    <input asp-for="ApPaterno" class="form-control" />
                    <span asp-validation-for="ApPaterno" class="text-danger"></span>
                </div>
            </div>
            <div class="col-8">
                <label asp-for="ApMaterno"></label>

                <div class="col-8">
                    <input asp-for="ApMaterno" class="form-control" />
                    <span asp-validation-for="ApMaterno" class="text-danger"></span>
                </div>
            </div>
           
            </div>
            <div class="col-8">
                <label asp-for="UrlFoto"></label>

                <div class="col-8">
                    <input type="file" asp-for="UrlFoto" class="form-control" />
                    <span asp-validation-for="UrlFoto" class="text-danger"></span>
                    <div class="col-2">
                        <img src="/@Model.UrlFoto" alt="" width="100" />
                    </div>
                </div>
            
            <div class="col-8">
                <label asp-for="CodigoInstructor"></label>

                <div class="col-8">
                    <input asp-for="CodigoInstructor" class="form-control" />
                    <span asp-validation-for="CodigoInstructor" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                @*refencia a visata parcia*@
                <partial name="VistaBotones" />

            </div>
        </div>
    </div>

</form>