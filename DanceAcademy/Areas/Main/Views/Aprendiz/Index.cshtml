
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2>Listado de Aprendices</h2>
    </div>
    <div class="col-6">
        <a asp-area="Main" asp-controller="Aprendiz" asp-action="Create" class="btn btn-success">
            Crear Aprendices
        </a>
    </div>

</div>


<table id="tableAprendiz" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>ApPaterno</th>
            <th>ApMaterno</th>
            <th>Edad</th>
            <th>Foto</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/Aprendiz.js">

    </script>
}