@model Dance_MVCRepository.Models.Aprendices

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post" asp-area="Main" asp-controller="Aprendiz" asp-action="Insert" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-2 mt-4">
            @*nombre*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            @*apellido Paterno*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApPaterno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApPaterno" class="form-control" />
                    <span asp-validation-for="ApPaterno" class="text-danger"></span>
                </div>
            </div>
            @*apelllido MAterno*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApMaterno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApMaterno" class="form-control" />
                    <span asp-validation-for="ApMaterno" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Edad"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Edad" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
            </div>

            @*Foto*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlFoto"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="imagen" id="subirImagen" class="form-control" />
                </div>
            </div>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-8 offset-4">
            <partial name="VistaBotones" />

        </div>
    </div>
</form>